{{define "nav"}}
<nav>
    <div>
        <a href='/' hx-boost="true" hx-target="main" hx-swap="outerHTML">Home</a>
        {{if .IsAuthenticated}}
            <a href='/bin/new' hx-boost="true" hx-target="main" hx-swap="outerHTML">Create bin</a>
        {{end}}
    </div>
    <div>
        {{if .IsAuthenticated}}
            <a href='/account' hx-boost="true" hx-target="main" hx-swap="outerHTML">Account</a>
            <form action='/users/logout' method='POST'>
                <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
                <button>Logout</button>
            </form>
        {{else}}
            <a href='/users/signup' hx-boost="true" hx-target="main" hx-swap="outerHTML">Signup</a>
            <a href='/users/login' hx-boost="true" hx-target="main" hx-swap="outerHTML">Login</a>
        {{end}}
    </div>
</nav>
{{end}}